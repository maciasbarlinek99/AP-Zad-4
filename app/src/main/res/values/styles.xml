<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="nickname">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/nickname_size</item>
        <item name="android:paddingBottom">@dimen/nickname_padding_bot</item>
    </style>

    <style name="push_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:width">150dp</item>
        <item name="android:height">80dp</item>
        <item name="android:backgroundTint">#a6a6a6</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="nickname_edit_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="nickname_edit" parent="nickname">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="score_players">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">34sp</item>
    </style>
</resources>